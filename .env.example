# ==============================================
# C++ Reference Viewer - Environment Variables
# ==============================================
# Copy this file to .env.local and configure as needed

# ----------------------------------------------
# Server-side Configuration
# ----------------------------------------------

# Wiki directory path (absolute or relative to web/ directory)
# Default: ../wiki
WIKI_DIR=../wiki

# Directories to exclude from tree/search (comma-separated)
# These are typically resource directories that don't contain documentation
# Default: common
WIKI_EXCLUDE=common

# Block Google Analytics scripts in served HTML files
# Set to "true" to remove analytics for privacy
# Default: false
WIKI_BLOCK_ANALYTICS=false

# Runtime mode: "server" or "serverless"
# Default: auto; if VERCEL is detected -> serverless, else server
RUNTIME_MODE=

# Vercel environment flag (set by Vercel automatically)
# Do not set manually under normal circumstances
VERCEL=

# Output directory for static wiki build (used by scripts/build-wiki.ts)
# Default: public/wiki (relative to web/ directory)
WIKI_OUT_DIR=public/wiki

# ----------------------------------------------
# Client-side Configuration
# (must start with NEXT_PUBLIC_)
# ----------------------------------------------

# Default home page path (relative to wiki directory)
# This is the page loaded when user clicks the home button
# Default: zh/扶뒬못.html
NEXT_PUBLIC_WIKI_HOME=zh/扶뒬못.html

# Enable full-text search functionality
# Set to "false" to disable search UI and API
# Default: true
NEXT_PUBLIC_ENABLE_SEARCH=true

# Enable mobile bottom address bar (Safari-style)
# Set to "false" to use traditional top navigation on mobile
# Default: true
NEXT_PUBLIC_MOBILE_BOTTOM_BAR=true
